doctype html
html(lang="en",ng-app="speakrtc",ng-cloak)
	head
		block title
			title SpeakRTC: Welcome

		meta(charset="utf-8")
		meta(name="viewport",content="width=device-width, initial-scale=1.0")

		include styles

		//- Block assets to external css include by other template .jade.
		block assets

		// HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
		// WARNING: Respond.js doesn't work if you view the page via file://
		//
			[if lt IE 9]
			script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
			script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
			<![endif]

	body.cf-speakrtc
		//- Block to show messages socket only for admins.
		if(user && user.is_admin)
			#socket-admin-notifications
				small(style="display:none;")

		//- Block to show user logged.
		if(user)
			p User: #{ user.username }
				if(user.is_admin)
					small  - ADMIN

		div#cf-sidebar
			ul
				li
					a(ng-href="#/rooms") Rooms
				if (user)
					if (user.is_admin)
						li
							a(ng-href="#/users") Users

		//- CU: Logout.
		if(user)
			a(href="/auth/logout") Logout

		//- CU: Verify the connection and to show their state.
		span.label.label-default#cf-connection-state Disconnected

		block content

		include scripts