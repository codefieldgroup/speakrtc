doctype html
html(lang="en",ng-app="speakrtc",ng-cloak)
	head
		block title
			title SpeakRTC: Welcome

		meta(charset="utf-8")
		meta(name="viewport",content="width=device-width, initial-scale=1.0")

		include styles

		//- Block assets to external css include by other template .jade.
		block assets

		// HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
		// WARNING: Respond.js doesn't work if you view the page via file://
		//
			[if lt IE 9]
			script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
			script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
			<![endif]

	body.cf-speakrtc
		//- CU: Logout.
		if(user)
			a(href="/auth/logout") Logout

		//- CU: Verify the connection and to show their state.
		span.label.label-default#cf-connection-state Disconnected

		block content

		include scripts